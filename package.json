{
  "name": "nextjs",
  "version": "0.0.0",
  "private": true,
  "description": "A nextjs boilerplate",
  "author": "Enrique Rimando <elrmndo@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:stats": "cross-env ANALYZE=true npm run build",
    "start": "next start",
    "lint": "eslint --ext \".jsx,.js\" --ignore-path .gitignore .",
    "format": "prettier --write \"*/**/*.{jsx,js}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.1.6",
    "cross-env": "^7.0.3",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint",
      "npm run format"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
